{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "Node",
        "outDir": "public/js",
        "rootDir": "src",
        "strict": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "ES2020",
            "DOM"
        ],
        "allowJs": false
    },
    "include": [
        "src/**/*"
    ]
}